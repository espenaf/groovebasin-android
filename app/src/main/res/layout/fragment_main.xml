<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <LinearLayout
        style="@style/NowPlayingWidgetInApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            style="@style/NPWiASongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/now_playing_song_title"
            android:text="KrÃ¥kevisa" />

        <TextView
            style="@style/NPWiASongArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/now_playing_song_artist"
            android:text="Leaves Eyes" />

        <LinearLayout
            style="@style/NPWiAControls">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/now_playing_seek_previous" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/now_playing_play_or_pause" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/now_playing_seek_next" />

        </LinearLayout>

        <LinearLayout
            style="@style/NPWiATimeDisplay">

            <TextView
                style="@style/NPWiATimeDisplayFirstChild"
                android:id="@+id/now_playing_current_time"
                android:text="0:17" />

            <TextView
                style="@style/NPWTimeDisplayChildrenBase"
                android:id="@+id/now_playing_total_time"
                android:text="3:13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                style="@style/NowPlayingWidgetBaseFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/now_playing_next_song_label"
                android:paddingRight="5dp"/>

            <TextView
                style="@style/NowPlayingWidgetBaseFont"
                android:id="@+id/now_playing_next_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phutureprimitive - Xotica"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
